<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".RentManagerActivityOwner">

    <Button
        android:id="@+id/btn_check_for_rents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_for_rents"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="@+id/text_view_rent_manager"
        app:layout_constraintTop_toTopOf="@+id/text_view_rent_manager" />

    <TextView
        android:id="@+id/text_view_rent_manager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_check_for_rents" />
</androidx.constraintlayout.widget.ConstraintLayout>